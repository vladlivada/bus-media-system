<script src="/js/jquery-3.6.0.slim.min.js"></script>

<%- include ("message-handler.ejs") %>
<%- include ("video-playback.ejs") %>
<%- include ("audio-playback.ejs") %>

<script>
  $(document).ready(() => {
    window._config = {};
    window._config.playlist = JSON.parse('<%- JSON.stringify(playlist) %>');
    window._config.alerts = JSON.parse('<%- JSON.stringify(alerts) %>');

    let playlist = window._config.playlist.sort((a, b) => a.index < b.index).map(x => x.src);
    let alerts = window._config.alerts;

    handleMessages(alerts);
    initVideoPlayback(playlist);
  })
</script>